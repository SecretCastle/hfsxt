/* pages/index/index.wxss */

.page_bd{
  padding: 0 15px;
}

.bottomLine {
  border-bottom:1px dashed #eee; 
}

.infoArea{
  position: relative;
  display: flex;
  justify-content: space-between;
}

.infoArea .picRight{
  width: 80px;
  height: 80px;
  border-radius: 50%;
}

.infoArea .picRight image {
  width: 80px;
  height: 80px;
}

.infoArea .leftTilte text {
  display: block;
}

.infoArea .leftTilte .mainTitle{
  padding-top: 8px;
  font-size: 18px;
  line-height: 40px;
}

.infoArea .leftTilte .subTitle{
  font-size: 12px;
  color: #666;
}

.detailList{
  position: relative;
  padding-top: 10px;
}

.detailList .list_item{
  position: relative;
  padding: 8px 0;
  font-size: 14px;
  line-height: 30px
}

.detailList .list_item .leftIcon,
.detailList .list_item .rightArrow{
  width: 15px;
  height: 15px;
  float: left;
  margin-top: 2px;
}

.detailList .list_item .leftIcon image,
.detailList .list_item .rightArrow image
 {
  width: 15px;
  height: 15px;
}

.detailList .list_item .rightArrow{
  float: right;
}

.detailList .list_item .center{
  margin-left: 30px;
  margin-right: 20px;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.detailList .list_item .center text{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  line-height: 24px;
}

.pic_show{
  position: relative;
}

.pic_show .title{
  position: relative;
  display: flex;
  justify-content: flex-start;
  margin: 0 0 10px 0;
}

.pic_show .title .icon {
  width: 15px;
  height: 15px;
  margin-top: 2px;
}

.pic_show .title .icon image{
  width: 15px;
  height: 15px;
}

.pic_show .title .pic_title text {
  font-size: 14px;
  padding-left: 15px;
}

.pic_show .pic_show_content{
  display: flex;
  flex-wrap: wrap;
}


.pic_show .pic_show_content .item{
  width: 32%;
  background: #eee;
  height: 90px;
  margin: 0.5%;
}

.pic_show .pic_show_content .item image {
  width: 100%;
  height: 90px;
}